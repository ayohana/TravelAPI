@{
    ViewData["Title"] = "Edit Review";
}

<h1>Edit @Model.Title</h1>

<form action="/Reviews/Details/@(Model.ReviewId)" method="post">
  @* <input id="ReviewId" name="ReviewId" type="number" value="@(Model.ReviewId)" hidden> *@
  <label for="destination">Destination of Travel:</label>
  <input id="destination" name="destination" type="text" value="@(Model.Destination)">
  <br>
  <label for="title">Title of Review:</label>
  <input id="title" name="title" type="text" value="@(Model.Title)">
  <br>
  <label for="description">Write Your Review:</label>
  <input id="description" name="description" type="text" value="@(Model.Description)">
  <br>
  <label for="rating">Rating of Destination:</label>
  <input id="rating" name="rating" type="number" value="@(Model.Rating)">
  <br>
  <label for="user_name">Enter your username:</label>
  <input id="user_name" name="user_name" type="text" value="@(Model.user_name)">
  <br>
  <button type="submit">Update</button>
</form>

<a href="/Reviews/Details/@(Model.ReviewId)"><p>Back to Review</p></a>